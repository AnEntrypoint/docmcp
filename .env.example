# DocMCP - Google Docs/Sheets MCP Server with OAuth Login
# Copy this to .env and fill in your values

# === Google OAuth Configuration ===
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret-here

# Where users are redirected after authorization
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:9998/oauth/callback

# === JWT Configuration ===
# Change this to a secure random string in production
JWT_SECRET=change-me-in-production-12345678

# === Server Configuration ===
PORT=9998
LOG_LEVEL=info
NODE_ENV=development

# === Optional ===
# SSL_CERT=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----
# SSL_KEY=-----BEGIN PRIVATE KEY-----...-----END PRIVATE KEY-----
